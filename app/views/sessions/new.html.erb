<div>
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
<fieldset>
	<legend>Please Log In</legend>
	<div>
	<%= label_tag :name, "name" %>
	<%= text_field_tag :name, params[:name] %>
	<%= label_tag :password, "password" %>
	<%= password_field_tag :password, params[:password_digest] %>
	</div>
	<div>
	<%= submit_tag "login" %>
	</div>
</fieldset>
<% end %>
</div>